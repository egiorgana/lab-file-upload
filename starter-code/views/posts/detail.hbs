<div>
  <img src="{{post.picPath}}" alt="{{post.picName}}">
  <div>
    <h4>{{post.picName}}</h4>
    <p>{{post.content}}</p>
    <br>
    <div role="group" aria-label="Basic example">
      <a href="/" type="button">Return</a>
    </div>
    <br>
    <br>
    <h5>Make a Comment</h5>
    <div>
      <div>
        <form action="/comment/{{post._id}}" method="POST" enctype="multipart/form-data">
          <div>
            <div>
              <span>Content</span>
            </div>
            <textarea name="content"></textarea>
          </div>
          <br>
          <div>
            <div >
              <span>Pic Name</span>
            </div>
            <input type="text" name="imgName" placeholder="Picture Name">
          </div>
          <div >
            <input type="file" name="imgPath" accept="image/*">
          </div>
              <button type="submit">Comment</button>
        </form>
      </div>
    </div>
    {{!-- vistas de los comentarios --}}
    {{#each comments as |comment|}}
      <div>
        <div>
          <p>
            {{content}}
            <br><br>
            <img width="25%" src="{{imagePath}}" alt="{{imageName}}">
          </p>
        </div>
      </div>
    {{/each}}
  </div>
</div>